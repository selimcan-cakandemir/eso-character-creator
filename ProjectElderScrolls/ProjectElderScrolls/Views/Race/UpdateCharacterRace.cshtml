@model ProjectElderScrolls.Models.Entities.CharacterRace
@{
    ViewBag.Title = "UpdateCharacterRace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6">
    <form method="post">
        <div class="form-group">
            <label>Race Name</label>
            <input type="text" value="@Model.RaceName" name="RaceName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Racial</label>
            <input type="text" value="@Model.Racial" name="Racial" class="form-control" />
        </div>
        <div class="form-group">
            <label>Lore</label>
            <input type="text" value="@Model.Lore" name="Lore" class="form-control" />
        </div>
       
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
